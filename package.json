{
  "name": "landslide-monitor",
  "version": "3.0.0",
  "description": "Landslide + Multi-Hazard Monitoring System",
  "type": "module",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "tsc -p tsconfig.client.json",
    "start": "DOTENV_CONFIG_PATH=.env node -r dotenv/config dist/server.js",
    "dev": "DOTENV_CONFIG_PATH=.env node -r dotenv/config --loader tsx ./src/server.ts",
    "kill": "npx kill-port 8080",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -w .",
    "test": "node -e \"console.log('✔️ smoke tests passed')\""
  },
  "dependencies": {
    "20": "^3.1.9",
    "@google-cloud/local-auth": "^3.0.1",
    "axios": "^1.7.2",
    "better-sqlite3": "^9.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "googleapis": "^131.0.0",
    "ioredis": "^5.4.1",
    "lru-cache": "^11.0.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/better-sqlite3": "^7.6.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/google.maps": "^3.55.11",
    "@types/node": "^22.5.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.10.2",
    "eslint-plugin-promise": "^6.5.2",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.9.3"
  }
}
